{
  "title": "{{ .Title }}",
  "permalink": "{{ .Permalink }}",
  "pages": [
    {{- range $i, $p := .Pages }}
    {{- if $i }},{{ end }}
    {
      "title": "{{ $p.Title }}",
      "date": "{{ $p.Date.Format "2006-01-02" }}",
      "permalink": "{{ $p.Permalink }}",
      "summary": {{ $p.Summary | jsonify }}
    }
    {{- end }}
  ]
}
