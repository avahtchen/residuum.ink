{
  "site": "{{ .Site.Title }}",
  "description": "{{ .Site.Params.description }}",
  "baseURL": "{{ .Site.BaseURL }}",
  "generated": "{{ now.Format "2006-01-02T15:04:05Z07:00" }}",
  "pages": [
    {{- range $i, $p := .Site.RegularPages }}
    {{- if $i }},{{ end }}
    {
      "title": "{{ $p.Title }}",
      "date": "{{ $p.Date.Format "2006-01-02" }}",
      "permalink": "{{ $p.Permalink }}",
      "section": "{{ $p.Section }}"
    }
    {{- end }}
  ]
}
